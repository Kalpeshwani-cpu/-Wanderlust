<%if(success && success.length){%>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-1" role="alert" id="successAlert">
        <%= success %>
        <button type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close">
        </button>
    </div>
<%}%> 

<% if(error && error.length){%>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-1" role="alert" id="errorAlert">
        <%= error %>
        <button type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close">
        </button>
    </div>
<%}%>

<script>
// Auto-hide flash messages after 4 seconds
document.addEventListener('DOMContentLoaded', function() {
    const successAlert = document.getElementById('successAlert');
    const errorAlert = document.getElementById('errorAlert');
    
    if (successAlert) {
        setTimeout(function() {
            const bsAlert = new bootstrap.Alert(successAlert);
            bsAlert.close();
        }, 4000); // 4 seconds
    }
    
    if (errorAlert) {
        setTimeout(function() {
            const bsAlert = new bootstrap.Alert(errorAlert);
            bsAlert.close();
        }, 4000); // 4 seconds
    }
});
</script> 